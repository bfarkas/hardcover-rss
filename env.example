# Hardcover RSS Service Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Your Hardcover API token
# Get this from https://hardcover.app/settings/api
HARDCOVER_API_TOKEN=your_hardcover_api_token_here

# Optional: Hardcover API URL (default: https://api.hardcover.app/v1/graphql)
HARDCOVER_API_URL=https://api.hardcover.app/v1/graphql

# Optional: Refresh interval in seconds (default: 3600 = 1 hour)
REFRESH_INTERVAL=3600

# Optional: Cache TTL in seconds (default: 1800 = 30 minutes)
CACHE_TTL=1800

# Optional: Log level (default: INFO)
LOG_LEVEL=INFO

# Optional: Redis URL (default: redis://redis:6379)
REDIS_URL=redis://redis:6379 